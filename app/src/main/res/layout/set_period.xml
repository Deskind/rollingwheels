<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <TextView
        android:id="@+id/tv11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="From:"
        android:textSize="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="To:"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="@+id/tv11"
        app:layout_constraintTop_toBottomOf="@+id/tv11" />

    <EditText
        android:id="@+id/period_from"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:hint="date"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv11"
        app:layout_constraintStart_toEndOf="@+id/tv11" />
    <EditText
        android:id="@+id/period_to"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textSize="20dp"
        android:hint="date"
        android:textAlignment="center"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv12"
        app:layout_constraintStart_toEndOf="@+id/tv12" />

    <Button
        android:id="@+id/btn_period_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/transparent_green"
        android:text="Done"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/period_to"
        />
</android.support.constraint.ConstraintLayout>